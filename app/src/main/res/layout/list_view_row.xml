<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/seznamCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/rastlinaIkona"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/grave"/>


            <TextView
                android:id="@+id/rastlinaIme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:backgroundTint="@color/grey_light"
                app:layout_constraintStart_toEndOf="@id/rastlinaIkona"
                app:layout_constraintTop_toTopOf="@id/rastlinaIkona" />

            <TextView
                android:id="@+id/rastlinaVrsta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/grey_light"
                app:layout_constraintStart_toEndOf="@+id/rastlinaIkona"
                app:layout_constraintTop_toBottomOf="@id/rastlinaIme"/>

            <TextView
                android:id="@+id/rastlinaVrstaLat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:backgroundTint="@color/grey_light"
                app:layout_constraintStart_toEndOf="@+id/rastlinaIkona"
                app:layout_constraintTop_toBottomOf="@id/rastlinaVrsta"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>