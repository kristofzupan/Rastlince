<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/seznamText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seznam vaÅ¡ih rastlin"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/seznamRastlin"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@id/dodajRastlino"/>

    <Button
        android:id="@+id/dodajRastlino"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/background_grey"
        android:foregroundTint="@color/ozadje_zelena"
        android:gravity="center"
        android:text="+"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seznamText" />

    <ImageButton
        android:id="@+id/PreminuleIkona"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/background_grey"
        android:padding="10dp"
        android:backgroundTint="#D9D9D9"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/grave" />

</androidx.constraintlayout.widget.ConstraintLayout>